<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="2dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_mosque"
            android:tint="@color/widget_primary" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:text="Namaz Vakitleri"
            android:textSize="10sp"
            android:textColor="@color/widget_text"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Prayer Times Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <!-- İmsak -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/imsak_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_moon"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:id="@+id/imsak_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="05:30"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Güneş -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/gunes_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_sun"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:id="@+id/gunes_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="07:00"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Öğle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/ogle_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_sun_high"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:id="@+id/ogle_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="13:00"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- İkindi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/ikindi_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_sun_low"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:id="@+id/ikindi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="16:30"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Akşam -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/aksam_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_sunset"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:id="@+id/aksam_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="19:00"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Yatsı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/yatsi_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_night"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:id="@+id/yatsi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="20:30"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>