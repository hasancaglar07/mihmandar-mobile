<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    android:background="@drawable/widget_background"
    android:elevation="4dp">

    <!-- Header with App Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mihmandar"
            android:textColor="#177267"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●"
            android:textColor="#10b981"
            android:textSize="8sp"/>

    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Next Prayer Highlight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/next_prayer_background"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvPrayerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🕌"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sıradaki: Öğle"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:45"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ 23 dk"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:alpha="0.9"/>

        </LinearLayout>

        <!-- Quick Prayer Times Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <!-- İmsak -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/prayer_item_background"
                    android:padding="6dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/imsakName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="İmsak"
                        android:textColor="#177267"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/imsakTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="#1f2937"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>
                </LinearLayout>

                <!-- Öğle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/prayer_item_background"
                    android:padding="6dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/ogleName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Öğle"
                        android:textColor="#177267"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/ogleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="#1f2937"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>
                </LinearLayout>

                <!-- Akşam -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/prayer_item_background"
                    android:padding="6dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/aksamName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Akşam"
                        android:textColor="#177267"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/aksamTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="#1f2937"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <!-- Güneş -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/prayer_item_background"
                    android:padding="6dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/gunesName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Güneş"
                        android:textColor="#177267"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/gunesTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="#1f2937"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>
                </LinearLayout>

                <!-- İkindi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/prayer_item_background"
                    android:padding="6dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/ikindiName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="İkindi"
                        android:textColor="#177267"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/ikindiTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="#1f2937"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>
                </LinearLayout>

                <!-- Yatsı -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/prayer_item_background"
                    android:padding="6dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/yatsiName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yatsı"
                        android:textColor="#177267"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/yatsiTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="#1f2937"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Footer with Hijri Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHijriDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🌙 15 Rabiulevvel 1446"
            android:textColor="#f59e0b"
            android:textSize="9sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍"
            android:textColor="#6b7280"
            android:textSize="9sp"/>

    </LinearLayout>

</LinearLayout>



