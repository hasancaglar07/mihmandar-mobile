<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="4dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="3dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_mosque"
            android:tint="@color/widget_primary" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Mihmandar"
            android:textSize="12sp"
            android:textColor="@color/widget_text"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/hijri_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Şaban 1404"
            android:textSize="10sp"
            android:textColor="@color/widget_text_secondary" />

    </LinearLayout>

    <!-- Next Prayer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/next_prayer_background"
        android:padding="4dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/next_prayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sıradaki: Öğle"
                android:textSize="13sp"
                android:textColor="@color/widget_primary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/remaining_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 saat 30 dakika kaldı"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary" />

        </LinearLayout>

        <TextView
            android:id="@+id/next_prayer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:00"
            android:textSize="18sp"
            android:textColor="@color/widget_primary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- All Prayer Times -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp">

            <!-- İmsak -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/imsak_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_moon"
                    android:tint="@color/widget_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İmsak"
                        android:textSize="8sp"
                        android:textColor="@color/widget_text_secondary" />

                    <TextView
                        android:id="@+id/imsak_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:30"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Güneş -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/gunes_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_sun"
                    android:tint="@color/widget_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Güneş"
                        android:textSize="8sp"
                        android:textColor="@color/widget_text_secondary" />

                    <TextView
                        android:id="@+id/gunes_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Öğle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/ogle_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_sun_high"
                    android:tint="@color/widget_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Öğle"
                        android:textSize="8sp"
                        android:textColor="@color/widget_text_secondary" />

                    <TextView
                        android:id="@+id/ogle_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- İkindi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/ikindi_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_sun_low"
                    android:tint="@color/widget_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İkindi"
                        android:textSize="8sp"
                        android:textColor="@color/widget_text_secondary" />

                    <TextView
                        android:id="@+id/ikindi_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:30"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Akşam -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/aksam_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_sunset"
                    android:tint="@color/widget_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Akşam"
                        android:textSize="8sp"
                        android:textColor="@color/widget_text_secondary" />

                    <TextView
                        android:id="@+id/aksam_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:00"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Yatsı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/yatsi_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_night"
                    android:tint="@color/widget_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yatsı"
                        android:textSize="8sp"
                        android:textColor="@color/widget_text_secondary" />

                    <TextView
                        android:id="@+id/yatsi_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:30"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>