<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="4dp"
    android:gravity="center_horizontal">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="3dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_mosque"
            android:tint="@color/widget_primary" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Mihmandar"
            android:textSize="12sp"
            android:textColor="@color/widget_text"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Next Prayer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/next_prayer_background"
        android:padding="6dp"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/next_prayer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sıradaki: Öğle"
            android:textSize="14sp"
            android:textColor="@color/widget_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/next_prayer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:00"
            android:textSize="18sp"
            android:textColor="@color/widget_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2s 30dk kaldı"
            android:textSize="11sp"
            android:textColor="@color/widget_text_secondary" />

    </LinearLayout>

    <!-- Prayer Times Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Row: İmsak, Güneş -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <!-- İmsak -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/imsak_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_moon"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İmsak"
                    android:textSize="10sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/imsak_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:30"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Güneş -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/gunes_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sun"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Güneş"
                    android:textSize="10sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/gunes_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:00"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Second Row: Öğle, İkindi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <!-- Öğle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/ogle_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sun_high"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Öğle"
                    android:textSize="10sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/ogle_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- İkindi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/ikindi_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sun_low"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İkindi"
                    android:textSize="10sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/ikindi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:30"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Third Row: Akşam, Yatsı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Akşam -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/aksam_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sunset"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akşam"
                    android:textSize="10sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/aksam_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:00"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Yatsı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/yatsi_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_night"
                    android:tint="@color/widget_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yatsı"
                    android:textSize="10sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/yatsi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:30"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>