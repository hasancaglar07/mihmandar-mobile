<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Header Section -->
    <TextView
        android:id="@+id/location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mihmandar"
        android:textSize="14sp"
        android:textColor="@color/widget_primary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="6dp" />

    <!-- Next Prayer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/next_prayer_background"
        android:padding="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/next_prayer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sıradaki: Yatsı"
            android:textSize="14sp"
            android:textColor="#007AFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/next_prayer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:40"
            android:textSize="28sp"
            android:textColor="#007AFF"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1s 22dk 2sn kaldı"
            android:textSize="12sp"
            android:textColor="@color/widget_text_secondary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>



</LinearLayout>