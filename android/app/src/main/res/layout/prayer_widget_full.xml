<?xml version="1.0" encoding="utf-8"?>
<!-- Full Widget - All Prayer Times -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background_full">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Namaz Vakitleri"
            android:textColor="#177267"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDateFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Aralık"
            android:textColor="#6b7280"
            android:textSize="10sp"/>

    </LinearLayout>

    <!-- Next Prayer Highlight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/next_prayer_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvNextIconFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☀️"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNextNameFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sıradaki: Öğle"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvNextTimeFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:45 (23 dk)"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:fontFamily="monospace"/>

        </LinearLayout>

    </LinearLayout>

    <!-- All Prayer Times Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Row 1: İmsak, Güneş, Öğle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/prayer_item_background"
                android:layout_margin="2dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/imsakNameFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İmsak"
                    android:textColor="#6b7280"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/imsakTimeFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#1f2937"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/prayer_item_background"
                android:layout_margin="2dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/gunesNameFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Güneş"
                    android:textColor="#6b7280"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/gunesTimeFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#1f2937"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/prayer_item_background"
                android:layout_margin="2dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/ogleNameFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Öğle"
                    android:textColor="#6b7280"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ogleTimeFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#1f2937"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Row 2: İkindi, Akşam, Yatsı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/prayer_item_background"
                android:layout_margin="2dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/ikindiNameFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İkindi"
                    android:textColor="#6b7280"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ikindiTimeFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#1f2937"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/prayer_item_background"
                android:layout_margin="2dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/aksamNameFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akşam"
                    android:textColor="#6b7280"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/aksamTimeFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#1f2937"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/prayer_item_background"
                android:layout_margin="2dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/yatsiNameFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yatsı"
                    android:textColor="#6b7280"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/yatsiTimeFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#1f2937"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/tvHijriDateFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🌙 15 Rabiulevvel 1446"
        android:textColor="#f59e0b"
        android:textSize="9sp"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

</LinearLayout>
